@page "/sign-in"
@layout EmptyLayout

@inject NavigationManager NavManager;

<PageLoader />
<EditForm class="form w-100" id="kt_sign_in_form" Model="@_loginModel" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <div class="text-center mb-11">
        <h1 class="text-dark fw-bolder mb-3">
            Sign In
        </h1>
        <div class="text-gray-500 fw-semibold fs-6">
            One stop for all your book needs
        </div>
    </div>

    <div class="row g-3 mb-9">
        <div class="col-md-6">
            <a href="#" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                <img alt="Logo" src="_content/eBook.Pages/assets/media/svg/brand-logos/google-icon.svg" class="h-15px me-3" />
                Sign in with Google
            </a>
        </div>

        <div class="col-md-6">
            <a href="#" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                <img alt="Logo" src="_content/eBook.Pages/assets/media/svg/brand-logos/apple-black.svg" class="theme-light-show h-15px me-3" />
                Sign in with Apple
            </a>
        </div>
    </div>

    <div class="separator separator-content my-14">
        <span class="w-125px text-gray-500 fw-semibold fs-7">Or</span>
    </div>

    <div class="fv-row mb-8">
        <label>Email address</label>
        <input type="email" @bind-value="_loginModel.UserName" class="form-control bg-transparent" placeholder="Phone, email, or username">
        <ValidationMessage For="@(()=> _loginModel.UserName)" />
    </div>
    <div class="fv-row mb-3">
        <label>Password</label>
        <input type="password" @bind-value="_loginModel.Password" class="form-control bg-transparent" placeholder="Password">
        <ValidationMessage For="@(()=> _loginModel.Password)" />
    </div>

    <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
        <div></div>
        <a href="/reset-password" class="link-primary">
            Forgot Password ?
        </a>
    </div>

    <div class="d-grid mb-10">
        <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
            <ButtonIndicator ButtonLabel="Sign In"></ButtonIndicator>
        </button>
    </div>

    <div class="text-gray-500 text-center fw-semibold fs-6">
        Not a Member yet?

        <a href="/sign-up" class="link-primary">
            Sign up
        </a>
    </div>
</EditForm>

@code {
    readonly LoginModel _loginModel = new();

    private async void Submit()
    {
        if (true)
        {
            NavManager.NavigateTo("/dashboard");
        }
        else
        {

        }
        this.StateHasChanged();
    }

}
